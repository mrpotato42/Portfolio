---
const {title, subtitle, description}= Astro.props;
---

<div class="flex bg-gradient-to-t from-coquimbo-400/50 to-75% py-2 px-3 overflow-y-scroll rounded-b-2xl shadow-xl shadow-slate-900/70 text-white">
  <div id="cardMenu" class="space-y-2">
    <h2 class="font-bold text-xl">{title}</h2>
    <h3 class="font-semibold text-lg">{subtitle}</h3>
    <p class="text-justify text-base">
     {description}
    </p>
  </div>
</div>

