---
import CardMenu from "./CardMenu.astro";
import NavCard from "../Cards/NavCard.astro";

const { sectionId } = Astro.props;

interface Job {
  title: string
  company: string
  date: string
  url: string
  image: string
}

const jobs: Job[] = [
  {
    title: 'Full-stack Developer',
    company: 'Imprimu',
    date: '04 / 2022 — 01 / 2024',
    url: 'https://imprimu.com/es/',
    image: '/images/printing.jpg'
  },
  {
    title: 'Front-end Developer',
    company: 'Swiset',
    date: '05 / 2023 — 12 / 2023',
    url: 'https://swiset.com/es/',
    image: '/images/trading.jpg'
  },
  {
    title: 'Front-end Developer',
    company: 'Pragma',
    date: '05 / 2021 — 12 / 2021',
    url: 'https://www.pragma.co/es/',
    image: '/images/development.jpg'
