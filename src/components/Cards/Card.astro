---
export interface Props {
    id: number
    title: string 
    subtitle: string 
    description: string 
    menuDescription: string 
    img: string 
}

const { id,
title,
subtitle,
description,
menuDescription,
img, } = Astro.props;
---

<div
  class="mx-5 py-px my-6 bg-coquimbo-200/30 rounded-xl h-full font-titillium sm:justify-items-center"
>
  <div class="grid grid-rows-1 grid-cols-1 m-3 rounded-t-xl h-full">
    <div class="grid grid-rows-2 grid-cols-3 justify-items-center">
      <div
      id="photo-card"
        class="scale-[1.5] col-start-2 mt-14 h-36 w-36 rounded-full bg-[length:100%]"
      >
      <img src={img} alt="">
      </div>
      <div
        class="flex row-start-2 col-start-1 col-span-3 z-0 h-40 mx-3 sm:max-h-max text-center"
      >
        <div
          class="flex bg-gradient-to-t from-coquimbo-400/50 to-75% py-2 px-3 overflow-y-scroll rounded-b-2xl shadow-xl shadow-slate-900/70 text-white"
        >
          <div
            id="cardMenu"
            class="space-y-2"
          >
          <div id="cardMenu" class="space-y-2">
            <h2 class="font-bold text-xl">{title}</h2>
            <h3 class="font-semibold text-lg">{subtitle}</h3>
            <p class="text-justify text-base">
             {description}
            </p>
          </div>
      </div>
    </div>
  </div>
</div>

